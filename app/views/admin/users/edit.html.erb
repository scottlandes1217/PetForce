<%= render 'shared/navbar_admin' %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h2 class="h4 mb-0">Edit User</h2>
        </div>
        <div class="card-body">
          <%= form_with model: [:admin, @user], local: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h6 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h6>
                <ul class="mb-0 small">
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-medium" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :first_name, class: "form-label fw-medium" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :last_name, class: "form-label fw-medium" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
            
            <div class="mb-4">
              <%= f.label :role, class: "form-label fw-medium" %>
              <%= f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-select" %>
            </div>
            
            <div class="d-flex gap-2">
              <%= f.submit "Save Changes", class: "btn btn-primary" %>
              <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 