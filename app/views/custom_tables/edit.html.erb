<%= render 'shared/navbar_org' %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Edit Custom Table</h3>
        </div>
        <div class="card-body">
          <%= form_with model: [@organization, @custom_table], local: true do |form| %>
            <% if @custom_table.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@custom_table.errors.count, "error") %> prohibited this custom table from being saved:</h5>
                <ul>
                  <% @custom_table.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :name, "Table Name", class: "form-label" %>
                  <%= form.text_field :name, class: "form-control" %>
                  <div class="form-text">A unique name for your table</div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :display_name, "Display Name", class: "form-label" %>
                  <%= form.text_field :display_name, class: "form-control" %>
                  <div class="form-text">The name that will be displayed to users</div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :api_name, "API Name", class: "form-label" %>
              <%= form.text_field :api_name, class: "form-control", readonly: true %>
              <div class="form-text">API name cannot be changed after creation</div>
            </div>

            <div class="mb-3">
              <%= form.label :font_awesome_icon, "Table Icon", class: "form-label" %>
              <div class="input-group">
                <%= form.text_field :font_awesome_icon, value: @custom_table.uploaded_icon? ? 'custom' : @custom_table.font_awesome_icon, class: "form-control", id: "selected-icon-input", readonly: true %>
                <button type="button" class="btn btn-outline-secondary" id="icon-picker-btn">
                  <i class="fas fa-icons"></i> Choose Icon
                </button>
                <button type="button" class="btn btn-outline-primary" id="custom-upload-btn">
                  <i class="fas fa-upload"></i> Custom Upload
                </button>
              </div>
              <div class="form-text">Click "Choose Icon" to browse Font Awesome icons or "Custom Upload" to upload your own image</div>
            </div>

            <div id="upload-options" class="mb-3" style="<%= @custom_table.font_awesome_icon? ? 'display: none;' : '' %>">
              <%= form.label :icon, "Upload Custom Image", class: "form-label" %>
              <% if @custom_table.uploaded_icon? && @custom_table.icon.attached? %>
                <div class="mb-2">
                  <img src="<%= url_for(@custom_table.icon) %>" alt="Current icon" style="max-width: 50px; max-height: 50px;" class="me-2">
                  <small class="text-muted">Current icon</small>
                </div>
              <% end %>
              <%= form.file_field :icon, class: "form-control", accept: "image/*" %>
              <div class="form-text">Upload a custom image for your table (PNG, JPG, GIF recommended)</div>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Description", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3 %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <div class="form-check">
                    <%= form.check_box :active, class: "form-check-input" %>
                    <%= form.label :active, "Active", class: "form-check-label" %>
                    <div class="form-text">Active tables can be used to create records</div>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <div class="form-check">
                    <%= form.check_box :add_to_navigation, class: "form-check-input" %>
                    <%= form.label :add_to_navigation, "Add to Navigation", class: "form-check-label" %>
                    <div class="form-text">Show this table in the main navigation menu</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Cancel", organization_custom_table_path(@organization, @custom_table), class: "btn btn-secondary" %>
              <div>
                <%= link_to "Delete Table", organization_custom_table_path(@organization, @custom_table), 
                    method: :delete, 
                    data: { confirm: "Are you sure? This will delete all fields and records in this table." },
                    class: "btn btn-danger" %>
                <%= form.submit "Update Table", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

