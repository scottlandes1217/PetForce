<%= render 'shared/navbar_org' %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Custom Tables</h2>
    <%= link_to "Create New Table", new_organization_custom_table_path(@organization), class: "btn btn-primary" %>
  </div>

  <% if @custom_tables.any? %>
    <div class="row">
      <% @custom_tables.each do |table| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
                              <div class="d-flex justify-content-between align-items-start mb-2">
                  <div class="d-flex align-items-center">
                    <% if table.font_awesome_icon? %>
                      <i class="<%= table.font_awesome_icon %> me-2" style="font-size: 1.2rem; color: #6c757d;"></i>
                    <% elsif table.uploaded_icon? && table.icon.attached? %>
                      <img src="<%= url_for(table.icon) %>" alt="<%= table.display_name %>" style="max-width: 24px; max-height: 24px;" class="me-2">
                    <% else %>
                      <i class="fas fa-database me-2" style="font-size: 1.2rem; color: #6c757d;"></i>
                    <% end %>
                    <h5 class="card-title mb-0">
                      <%= link_to table.display_name, organization_custom_table_path(@organization, table), class: "text-decoration-none" %>
                    </h5>
                  </div>
                  <div>
                    <% if table.add_to_navigation? %>
                      <span class="badge bg-primary me-1">Navigation</span>
                    <% end %>
                    <span class="badge <%= table.active? ? 'bg-success' : 'bg-secondary' %>">
                      <%= table.active? ? 'Active' : 'Inactive' %>
                    </span>
                  </div>
                </div>
              
              <p class="card-text text-muted small mb-2">
                API Name: <code><%= table.api_name %></code>
              </p>
              
              <% if table.description.present? %>
                <p class="card-text small"><%= truncate(table.description, length: 100) %></p>
              <% end %>
              
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <%= pluralize(table.custom_fields.count, 'field') %> â€¢ 
                  <%= pluralize(table.custom_records.count, 'record') %>
                </small>
                
                <div class="btn-group btn-group-sm">
                  <%= link_to "View", organization_custom_table_path(@organization, table), class: "btn btn-outline-primary" %>
                  <%= link_to "Edit", edit_organization_custom_table_path(@organization, table), class: "btn btn-outline-secondary" %>
                  <%= link_to "Fields", organization_custom_table_custom_fields_path(@organization, table), class: "btn btn-outline-info" %>
                  <%= link_to "Records", organization_custom_table_custom_records_path(@organization, table), class: "btn btn-outline-success" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-database fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">No Custom Tables</h4>
      <p class="text-muted">Create your first custom table to start organizing your data.</p>
      <%= link_to "Create Your First Table", new_organization_custom_table_path(@organization), class: "btn btn-primary" %>
    </div>
  <% end %>
</div> 