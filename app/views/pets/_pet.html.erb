<!-- Header Section -->
<div class="pet-header">
  <!-- Pet Photo -->
  <div class="pet-photo-container" data-action="click->pet#openImageModal">
    <% if pet.photo.attached? %>
      <%= image_tag pet.photo, class: "pet-photo", data: { pet_target: "photo" } %>
      <div class="photo-overlay">Change Photo</div>
    <% else %>
      <div class="placeholder-photo">Add Photo</div>
    <% end %>
  </div>

  <!-- Editable Name -->
  <div class="header-details">
    <div class="field-container name-field-header d-flex align-items-center">
      <div class="d-flex align-items-center">
        <span class="value" data-field="name" data-edit-field-target="value"><%= pet.name %></span>
        <button class="edit-button" 
                data-field="name" 
                data-edit-field-target="editButton" 
                data-action="click->edit-field#edit">
          <i class="fas fa-pencil-alt" aria-hidden="true"></i>
        </button>
        <input class="edit-input" 
               type="text" 
               data-field="name" 
               data-edit-field-target="input" 
               value="<%= pet.name %>" 
               style="display: none;" />
      </div>
      
      <!-- Flag Icons -->
      <div class="flag-icons ms-3">
        <% if pet.flags.present? %>
          <% pet.flags.each do |flag| %>
            <% flag_field = pet.organization.organization_fields.find_by(field_type: :flags, value: flag) %>
            <% if flag_field&.icon&.attached? %>
              <%= image_tag flag_field.icon, 
                           class: "flag-icon", 
                           title: flag,
                           style: "width: 24px; height: 24px; margin-right: 4px;" %>
            <% else %>
              <span class="text-danger">[No icon for <%= flag %>]</span>
            <% end %>
          <% end %>
        <% else %>
          <span class="text-muted">[No flags]</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Tabs Navigation -->
<div class="tabs">
  <button class="tab-link" data-tab="details" data-action="click->pet#switchTab">Details</button>
  <button class="tab-link" data-tab="feed" data-action="click->pet#switchTab">Feed</button>
  <button class="tab-link" data-tab="gallery" data-action="click->pet#switchTab">Gallery</button>
  <button class="tab-link" data-tab="tasks" data-action="click->pet#switchTab">Tasks</button>
</div>

<!-- Tab Content: TASKS -->
<div class="tab-content" id="tasks" style="display: none;">
  <h2>Tasks</h2>
  <%= link_to "Create Task", new_organization_pet_task_path(pet.organization, pet), class: "btn btn-primary mb-3" %>
  <%= render partial: "tasks/tasks", locals: { tasks: pet.tasks } %>
</div> 