<h1>Add New Pet</h1>

<%= form_with model: @pet, url: organization_pets_path(@organization), local: true do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :breed %>
    <%= f.text_field :breed, required: true %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit 'Add Pet', class: 'btn btn-primary' %>
  </div>

  <div class="form-group">
  <%= f.label :photo, "Upload Pet Photo" %>
  <%= f.file_field :photo, class: "form-control" %>
</div>

<% end %>
