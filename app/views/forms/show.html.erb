<%= render 'shared/navbar_org' %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= @form.name %></h1>
        <div class="btn-group" role="group">
          <%= link_to edit_organization_form_path(@organization, @form), class: "btn btn-secondary" do %>
            <i class="fas fa-edit me-2"></i>Edit
          <% end %>
          <%= link_to builder_organization_form_path(@organization, @form), class: "btn btn-info", data: { turbo: false } do %>
            <i class="fas fa-paint-brush me-2"></i>Form Builder
          <% end %>
          <%= link_to organization_forms_path(@organization), class: "btn btn-outline-secondary" do %>
            <i class="fas fa-arrow-left me-2"></i>Back to Forms
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Form Details</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <p><strong>Name:</strong> <%= @form.name %></p>
                  <p><strong>Status:</strong> 
                    <% if @form.is_active? %>
                      <span class="badge bg-success">Active</span>
                    <% else %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% end %>
                  </p>
                </div>
                <div class="col-md-6">
                  <p><strong>Created:</strong> <%= @form.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                  <p><strong>Updated:</strong> <%= @form.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
              </div>
              
              <% if @form.description.present? %>
                <hr>
                <p><strong>Description:</strong></p>
                <p><%= @form.description %></p>
              <% end %>
            </div>
          </div>

          <% if @form.form_data.present? %>
            <div class="card mt-4">
              <div class="card-header">
                <h5 class="mb-0">Form Preview</h5>
              </div>
              <div class="card-body">
                <div id="form-preview">
                  <%= @form.form_html.html_safe if @form.form_html.present? %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="card mt-4">
              <div class="card-body text-center py-5">
                <i class="fas fa-paint-brush fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No form content yet</h4>
                <p class="text-muted">Use the form builder to create your form.</p>
                <%= link_to builder_organization_form_path(@organization, @form), class: "btn btn-primary", data: { turbo: false } do %>
                  <i class="fas fa-paint-brush me-2"></i>Open Form Builder
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
              <div class="d-grid gap-2">
                <%= link_to builder_organization_form_path(@organization, @form), class: "btn btn-primary", data: { turbo: false } do %>
                  <i class="fas fa-paint-brush me-2"></i>Form Builder
                <% end %>
                <%= link_to display_organization_form_path(@organization, @form), class: "btn btn-info", target: "_blank" do %>
                  <i class="fas fa-eye me-2"></i>View Form
                <% end %>
                <%= link_to edit_organization_form_path(@organization, @form), class: "btn btn-secondary" do %>
                  <i class="fas fa-edit me-2"></i>Edit Form
                <% end %>
                <%= link_to organization_form_path(@organization, @form), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete this form?" }, 
                    class: "btn btn-danger" do %>
                  <i class="fas fa-trash me-2"></i>Delete Form
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
