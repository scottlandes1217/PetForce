<%= render 'shared/navbar_org' %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Forms</h1>
        <%= link_to new_organization_form_path(@organization), class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i>Create New Form
        <% end %>
      </div>

      <% if @forms.any? %>
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Submissions</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @forms.each do |form| %>
                    <tr>
                      <td>
                        <strong><%= form.name %></strong>
                      </td>
                      <td>
                        <%= truncate(form.description, length: 100) if form.description.present? %>
                      </td>
                      <td>
                        <% if form.is_active? %>
                          <span class="badge bg-success">Active</span>
                        <% else %>
                          <span class="badge bg-secondary">Inactive</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= form.form_submissions.count %></span>
                      </td>
                      <td>
                        <%= form.created_at.strftime("%b %d, %Y") %>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to organization_form_path(@organization, form), class: "btn btn-sm btn-outline-primary" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          <%= link_to edit_organization_form_path(@organization, form), class: "btn btn-sm btn-outline-secondary" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                          <%= link_to builder_organization_form_path(@organization, form), class: "btn btn-sm btn-outline-info", data: { turbo: false } do %>
                            <i class="fas fa-paint-brush"></i>
                          <% end %>
                          <%= link_to organization_form_path(@organization, form), 
                              method: :delete, 
                              data: { confirm: "Are you sure you want to delete this form?" }, 
                              class: "btn btn-sm btn-outline-danger" do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No forms yet</h4>
            <p class="text-muted">Create your first form to get started.</p>
            <%= link_to new_organization_form_path(@organization), class: "btn btn-primary" do %>
              <i class="fas fa-plus me-2"></i>Create Your First Form
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
