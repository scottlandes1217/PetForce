<%= render 'shared/navbar_org' %>

<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tables</h1>
        <%= link_to new_organization_custom_table_path(@organization), class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i>Create Custom Table
        <% end %>
      </div>

      <!-- Search form -->
      <%= form_with url: organization_tables_path(@organization), method: :get, local: true, class: "mb-4" do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], placeholder: "Search tables by name or description...", class: "form-control" %>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
          </button>
          <% if params[:query].present? %>
            <%= link_to "Clear", organization_tables_path(@organization), class: "btn btn-outline-secondary" %>
          <% end %>
        </div>
      <% end %>

      <!-- Tables Table -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-table me-2"></i>All Tables
            <% if params[:query].present? %>
              <small class="text-muted">(<%= @all_tables.count %> results)</small>
            <% end %>
          </h5>
        </div>
        <div class="card-body">
          <% if @all_tables.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Table</th>
                    <th>Type</th>
                    <th>Records</th>
                    <th>Description</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @all_tables.each do |table| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <i class="<%= table[:icon] %> fa-lg text-primary me-3"></i>
                          <div>
                            <strong><%= table[:display_name] %></strong>
                            <% if table[:type] == 'custom' && table[:in_navigation] %>
                              <span class="badge bg-success ms-2" title="In Navigation">
                                <i class="fas fa-link"></i>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <% if table[:type] == 'built_in' %>
                          <span class="badge bg-primary">Built-in</span>
                        <% else %>
                          <span class="badge bg-success">Custom</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="text-muted"><%= pluralize(table[:record_count], 'record') %></span>
                      </td>
                      <td>
                        <span class="text-muted"><%= truncate(table[:description], length: 60) %></span>
                      </td>
                      <td>
                                                 <div class="btn-group" role="group">
                           <% if table[:type] == 'built_in' %>
                             <%= link_to table[:view_path], class: "btn btn-outline-primary btn-sm" do %>
                               <i class="fas fa-eye me-1"></i>View
                             <% end %>
                           <% else %>
                             <%= link_to table[:path], class: "btn btn-outline-primary btn-sm" do %>
                               <i class="fas fa-eye me-1"></i>View
                             <% end %>
                           <% end %>
                          
                          <% if table[:has_custom_fields] %>
                            <% if table[:type] == 'custom' %>
                              <%= link_to organization_organization_table_fields_path(@organization, table[:custom_table].api_name), class: "btn btn-outline-secondary btn-sm" do %>
                                <i class="fas fa-cog me-1"></i>Fields
                              <% end %>
                            <% else %>
                              <%= link_to organization_organization_table_fields_path(@organization, table[:custom_table_id]), class: "btn btn-outline-secondary btn-sm" do %>
                                <i class="fas fa-cog me-1"></i>Fields
                              <% end %>
                            <% end %>
                          <% else %>
                            <button class="btn btn-outline-secondary btn-sm" disabled title="Custom fields coming soon">
                              <i class="fas fa-cog me-1"></i>Fields
                            </button>
                          <% end %>
                          
                          <% if table[:type] == 'custom' %>
                            <%= link_to edit_organization_custom_table_path(@organization, table[:custom_table]), class: "btn btn-outline-info btn-sm" do %>
                              <i class="fas fa-edit me-1"></i>Edit
                            <% end %>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <% if params[:query].present? %>
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No tables found</h5>
                <p class="text-muted">Try adjusting your search terms.</p>
                <%= link_to "View all tables", organization_tables_path(@organization), class: "btn btn-primary" %>
              <% else %>
                <i class="fas fa-database fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No Custom Tables Yet</h5>
                <p class="text-muted">Create your first custom table to get started.</p>
                <%= link_to new_organization_custom_table_path(@organization), class: "btn btn-primary" do %>
                  <i class="fas fa-plus me-2"></i>Create Your First Table
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 