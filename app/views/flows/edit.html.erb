<%= render 'shared/navbar_org' %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Edit Flow</h2>
        </div>
        <div class="card-body">
          <%= form_with model: [@organization, @flow], local: true do |form| %>
                          <% if @flow.errors.any? %>
                <div class="alert alert-danger">
                  <h4><%= pluralize(@flow.errors.count, "error") %> prohibited this flow from being saved:</h4>
                  <ul>
                    <% @flow.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            <div class="mb-3">
              <%= form.label :name, class: 'form-label' %>
                              <%= form.text_field :name, class: 'form-control', placeholder: 'Enter flow name' %>
            </div>



            <div class="mb-3">
              <%= form.label :status, class: 'form-label' %>
              <%= form.select :status, 
                            options_for_select([
                              ['Draft - Still being developed', 'draft'],
                              ['Active - Ready for use', 'active']
                            ], @flow.status), 
                            {}, 
                            class: 'form-select' %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to 'Cancel', organization_flow_path(@organization, @flow), class: 'btn btn-secondary' %>
              <div>
                <%= link_to 'Delete', organization_flow_path(@organization, @flow), 
                            method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this flow?' }, 
                            class: 'btn btn-danger me-2' %>
                <%= form.submit 'Update Flow', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 