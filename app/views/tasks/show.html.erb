<h1>Task Details</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><strong>Subject:</strong> <%= @task.subject %></h5>
    <p class="card-text"><strong>Description:</strong> <%= @task.description.presence || "No description provided." %></p>
    <p><strong>Status:</strong> <%= @task.status.humanize %></p>
    <p><strong>Type:</strong> <%= @task.type&.value || "None" %></p>
    <p><strong>Flags:</strong> 
      <% if @task.flags.any? %>
        <%= @task.flags.map(&:value).join(", ") %>
      <% else %>
        None
      <% end %>
    </p>
    <p><strong>Start Date and Time:</strong> <%= @task.start_date_time&.strftime("%B %d, %Y %H:%M") || "Not Set" %></p>
    <p><strong>Duration:</strong> <%= @task.duration.present? ? "#{@task.duration} minutes" : "Not Set" %></p>
    <p><strong>Completed Date and Time:</strong> <%= @task.completed_date_time&.strftime("%B %d, %Y %H:%M") || "Not Completed" %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit Task", edit_organization_pet_task_path(@organization, @pet, @task), class: "btn btn-warning" %>
  <%= link_to "Back to Tasks", organization_pet_tasks_path(@organization, @pet), class: "btn btn-secondary" %>
</div>