<table class="table table-striped">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Status</th>
      <th>Type</th>
      <th>Flags</th>
      <th>Start Date/Time</th>
      <th>Duration (minutes)</th>
      <th>Completed Date/Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr id="task-<%= task.id %>">
        <td><%= task.subject %></td>
        <td><%= task.description %></td>
        <td class="status"><%= task.status %></td>
        <td><%= task.task_type.present? ? task.task_type : "N/A" %></td>
        <td><%= task.flag_list.join(", ") %></td>
        <td><%= task.start_time&.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= task.duration_minutes %></td>
        <td><%= task.completed_at&.strftime("%B %d, %Y %H:%M") || "N/A" %></td>
        <td>
          <%= link_to "Edit", edit_organization_pet_task_path(task.pet.organization, task.pet, task), class: "btn btn-sm btn-primary" %>
          <%= link_to "Delete", organization_pet_task_path(task.pet.organization, task.pet, task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>