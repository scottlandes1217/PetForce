<%= render 'shared/navbar_org' %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2>Fields for <%= @custom_table.display_name %></h2>
      <p class="text-muted mb-0">
        <%= link_to "← Back to Table", organization_custom_table_path(@organization, @custom_table) %>
      </p>
    </div>
    <%= link_to "Add New Field", new_organization_custom_table_custom_field_path(@organization, @custom_table), class: "btn btn-primary" %>
  </div>

  <% if @custom_fields.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Field Name</th>
                <th>Type</th>
                <th>Required</th>
                <th>Unique</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @custom_fields.each do |field| %>
                <tr>
                  <td>
                    <div>
                      <strong><%= field.display_name %></strong>
                      <br>
                      <small class="text-muted"><%= field.api_name %></small>
                    </div>
                    <% if field.description.present? %>
                      <small class="text-muted"><%= truncate(field.description, length: 50) %></small>
                    <% end %>
                  </td>
                  <td>
                    <span class="badge bg-info"><%= field.field_type.titleize %></span>
                    <% if field.picklist? && field.picklist_values.any? %>
                      <br><small class="text-muted"><%= pluralize(field.picklist_values.count, 'option') %></small>
                    <% end %>
                  </td>
                  <td>
                    <% if field.required? %>
                      <span class="text-danger">✓</span>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td>
                    <% if field.unique? %>
                      <span class="text-warning">✓</span>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td>
                    <span class="badge <%= field.active? ? 'bg-success' : 'bg-secondary' %>">
                      <%= field.active? ? 'Active' : 'Inactive' %>
                    </span>
                    <% if field.hidden? %>
                      <br><small class="text-muted">Hidden</small>
                    <% end %>
                  </td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <%= link_to "Edit", edit_organization_custom_table_custom_field_path(@organization, @custom_table, field), class: "btn btn-outline-secondary" %>
                      <%= link_to "Delete", organization_custom_table_custom_field_path(@organization, @custom_table, field), 
                          method: :delete, 
                          data: { confirm: "Are you sure? This will delete all values for this field." },
                          class: "btn btn-outline-danger" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-columns fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">No Fields Defined</h4>
      <p class="text-muted">Add fields to your custom table to start collecting data.</p>
      <%= link_to "Add Your First Field", new_organization_custom_table_custom_field_path(@organization, @custom_table), class: "btn btn-primary" %>
    </div>
  <% end %>
</div> 